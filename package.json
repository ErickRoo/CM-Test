{
  "name": "green-light",
  "version": "0.0.1",
  "description": "",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timedotcom/greenlight.git"
  },
  "scripts": {
    "develop": "npm --workspace ./sites/your-lit-job run develop --if-present",
    "build": "npm --workspace ./sites/./sites/your-lit-job run build --if-present",
    "predeploy": "npm run build --site=./sites/your-lit-job",
    "deploy": "npm exec --workspace ./sites/./sites/your-lit-job -- gatsby-plugin-s3 deploy",
    "preview-deploy": "CONTENTFUL_PREVIEW=true npm run deploy",
    "clean": "npm --workspace ./sites/./sites/your-lit-job run clean --if-present && rm -rf coverage && npm run clean-install",
    "clean-install": "rm -rf package-lock.json && rm -rf node_modules && npm install",
    "jest": "jest",
    "lint:js": "npx eslint . --quiet",
    "lint:scss": "npx stylelint **.scss --fix",
    "lint:all": "npm run lint:js && npm run lint:scss",
    "test": "npm run lint:all && npm run jest",
    "prepare": "husky install"
  },
  "engines": {
    "node": "16.15.0"
  },
  "workspaces": [
    "packages/*",
    "sites/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@types/jest": "^27.4.1",
    "babel-jest": "^28.0.2",
    "babel-preset-gatsby": "^2.13.0",
    "cypress": "^9.6.0",
    "dotenv": "^16.0.0",
    "eslint": "8.22.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-webpack-plugin": "^3.1.1",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.0.2",
    "jest-environment-jsdom": "^28.0.2",
    "prettier": "^2.6.2",
    "stylelint": "^14.8.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "stylelint-declaration-strict-value": "^1.8.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "supertest": "^6.2.3"
  },
  "overrides": {
    "@react-pdf/renderer": {
      "react": "^18.1.0"
    }
  }
}
